<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
         Primary brand color.
        <item name="colorPrimary">@color/bg</item>
         Secondary brand color.
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="colorAccent">@color/black</item>
        <item name="statusBarBackground">@color/orange</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/bg</item>

    </style>

    <style name = "TabItem">
<item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AuthField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AuthFieldImage">
        <item name="android:layout_width">@dimen/dp_30</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
    </style>

    <style name="AuthFieldEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_4</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/blondText</item>
    </style>

</resources>